# Google Gemini AI API Key
# Get your key at: https://aistudio.google.com/apikey
VITE_GEMINI_API_KEY=your_api_key_here

# Alchemy RPC Provider for Polygon Network
# Get your key at: https://www.alchemy.com/
VITE_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Alchemy Gas Manager Policy ID (for gas-sponsored minting)
# Create a policy at: https://dashboard.alchemy.com/gas-manager
VITE_ALCHEMY_POLICY_ID=your_gas_policy_id_here

# NFT Smart Contract address on Polygon
VITE_NFT_CONTRACT_ADDRESS=0xYourNFTContractAddressHere

# Bundle price in MATIC for 3 additional refreshes (fallback if gas sponsoring unavailable)
VITE_BUNDLE_PRICE_MATIC=1.0

# Payment recipient wallet address (receives MATIC for bundle purchases)
VITE_PAYMENT_ADDRESS=0xYourPaymentAddressHere

# Backend API URL (frontend uses this for payment polling)
VITE_BACKEND_URL=http://localhost:3000

# ── Server-side only (not exposed to browser) ──────────────────────────────────

# Alchemy Webhook ID (for reference — registered in Alchemy Dashboard)
ALCHEMY_WEBHOOK_ID=your_webhook_id_here

# Alchemy Activity Webhook signing key (for HMAC-SHA256 verification)
# Get this from: https://dashboard.alchemy.com/webhooks → your webhook → Signing Key
ALCHEMY_WEBHOOK_SIGNING_KEY=your_webhook_signing_key_here

# Server wallet private key (signs mint-grant vouchers after payment validated)
# WARNING: Keep this secret — never commit to source control
SERVER_PRIVATE_KEY=your_server_wallet_private_key_here

# Bundle price threshold in EUR (server rejects payments below this value)
BUNDLE_PRICE_EUR=19.99

# Allowed CORS origin for the backend server
FRONTEND_URL=http://localhost:5173
